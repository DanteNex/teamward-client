<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/championMasteryImage"
        android:layout_width="@dimen/details_ranked_size"
        android:layout_height="@dimen/details_ranked_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/champion_mastery"
        android:padding="12dp"
        app:srcCompat="@drawable/champion_mastery_5" />

    <TextView
        android:id="@+id/championMasteryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@+id/championMasteryImage"
        android:layout_toRightOf="@+id/championMasteryImage"
        android:text="@string/champion_mastery_lvl"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
</RelativeLayout>
