<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fr.neamar.lolgamedata.ChampionDetailActivity"
    tools:showIn="@layout/activity_champion_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/masteryHolder"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/championMasteryImage"
                android:layout_width="@dimen/champion_mastery_size_details"
                android:layout_height="@dimen/champion_mastery_size_details"
                app:srcCompat="@drawable/champion_mastery_5"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/championMasteryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/champion_mastery_lvl"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/championMasteryImage"
                android:layout_toEndOf="@+id/championMasteryImage" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/rankingHolder"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rankingTierImage"
                android:layout_width="@dimen/champion_mastery_size_details"
                android:layout_height="@dimen/champion_mastery_size_details"
                app:srcCompat="@drawable/tier_platinum"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/rankingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/ranking"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/rankingTierImage"
                android:layout_toEndOf="@+id/rankingTierImage" />
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/progressBar4"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
