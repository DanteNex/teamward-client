<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingBottom="12dp"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingRight="@dimen/activity_margin"
    android:paddingTop="12dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/summonerImage"
        android:layout_width="@dimen/champion_mastery_size"
        android:layout_height="@dimen/champion_mastery_size"
        android:contentDescription="@string/summoner_icon"
        android:src="@drawable/default_champion" />

    <TextView
        android:id="@+id/summonerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginStart="@dimen/activity_margin"
        android:gravity="center_vertical"
        android:text="@string/stub_account"
        android:textColor="#dd000000"
        android:textSize="14sp"
        android:textStyle="bold" />
</LinearLayout>